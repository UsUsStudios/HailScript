{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${workspaceFolder}/build/hailscript.exe",
                "${workspaceFolder}/src/hailscript.cpp",
                "${workspaceFolder}/src/headers/*.cpp",
                "/Fobuild/",
                "/Fdbuild/main.pdb",
                "/Fabuild/",
                "/link",
                "/ILK:build/main.ilk"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}